<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/verdeClaro">

    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/tvTipoProblema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ivFoto"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="16dp"
        android:text="Buraco"
        android:textColor="@color/cinzaclaro"
        android:textSize="22sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/tvTipoProblema">
        <ImageView
            android:id="@+id/ivPlace"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_place"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvDescricaoProblema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="40dp"
            android:layout_centerVertical="true"
            android:textColor="@color/cinzaclaro"
            android:textSize="18sp"
            android:text="Esse buraco está ai a mais de 10 anos e o governo não resolve.... anda povo faz algo!!!" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvDataProblema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivFoto"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="12/12/2018"
        android:layout_marginEnd="17dp"
        android:textColor="@color/cinzaclaro"
        android:layout_alignParentEnd="true" />
</RelativeLayout>