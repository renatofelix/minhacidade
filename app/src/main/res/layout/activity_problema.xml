<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="trabalho.aluno.ufg.br.minhacidade.main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:id="@+id/vCenter"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/vCenter"
            android:gravity="center_horizontal"
            android:id="@+id/tvAntes"
            android:text="Antes"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/grey"
            android:layout_toLeftOf="@id/vCenter"
            android:layout_below="@id/tvAntes"
            android:src="@drawable/ic_camera"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/vCenter"
            android:gravity="center_horizontal"
            android:id="@+id/tvDepois"
            android:text="Depois"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/grey"
            android:layout_toRightOf="@id/vCenter"
            android:layout_below="@id/tvAntes"
            android:src="@drawable/ic_camera"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTipoProblema"
            android:textSize="18sp"
            android:text="Tipo do Problema: Buraco"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvStatusProblema"
            android:layout_below="@id/tvTipoProblema"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:text="Status do Problema: Resolvido"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvStatusProblema"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tvTipoProblema"
            android:background="@drawable/ic_check"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ComentÃ¡rio sobre o problema"
            android:layout_below="@id/tvStatusProblema"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:lines="3"/>
    </RelativeLayout>

</LinearLayout>
